<!-- Header / Navigation -->
<header class="sticky top-0 z-40 bg-white/80 backdrop-blur supports-[backdrop-filter]:bg-white/60 border-b border-slate-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <a href="#home" class="flex items-center gap-3 focus-ring" aria-label="Samplify home">
        <!-- Responsive logo: small on mobile -->
        <img src="assets/logo-small.png" alt="Samplify logo" class="h-8 w-auto block sm:hidden" height="32" width="32"/>
        <img src="assets/logo.png" alt="Samplify logo" class="h-9 w-auto hidden sm:block" height="36"/>
      </a>
      <!-- Desktop nav -->
      <nav aria-label="Primary" class="hidden md:flex items-center gap-1">
        <a class="px-3 py-2 rounded-lg text-slate-700 hover:text-deepblue-900 hover:bg-skybrand-500/10 focus-ring" href="#home">Home</a>
        <a class="px-3 py-2 rounded-lg text-slate-700 hover:text-deepblue-900 hover:bg-skybrand-500/10 focus-ring" href="#about">About</a>
        <a class="px-3 py-2 rounded-lg text-slate-700 hover:text-deepblue-900 hover:bg-skybrand-500/10 focus-ring" href="#solutions">Solutions</a>
        <a class="px-3 py-2 rounded-lg text-slate-700 hover:text-deepblue-900 hover:bg-skybrand-500/10 focus-ring" href="#gallery">Gallery</a>
        <a class="px-3 py-2 rounded-lg text-slate-700 hover:text-deepblue-900 hover:bg-skybrand-500/10 focus-ring" href="#team">Team</a>
        <a class="px-4 py-2 rounded-lg bg-gradient-to-r from-skybrand-300 to-skybrand-500 text-white hover:shadow-glow focus-ring" href="#contact">Contact</a>
      </nav>
      <!-- Mobile menu button -->
      <button id="menuBtn" class="md:hidden p-2 rounded-lg hover:bg-skybrand-500/10 focus-ring" aria-label="Open menu" aria-controls="mobileNav" aria-expanded="false">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-deepblue-900" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>
  </div>
  <!-- Mobile Nav -->
  <nav id="mobileNav" class="md:hidden max-h-0 overflow-hidden transition-all duration-300" aria-label="Mobile">
    <div class="px-4 pb-4 space-y-2">
      <a class="block px-3 py-2 rounded-lg hover:bg-skybrand-500/10 focus-ring" href="#home">Home</a>
      <a class="block px-3 py-2 rounded-lg hover:bg-skybrand-500/10 focus-ring" href="#about">About</a>
      <a class="block px-3 py-2 rounded-lg hover:bg-skybrand-500/10 focus-ring" href="#solutions">Solutions</a>
      <a class="block px-3 py-2 rounded-lg hover:bg-skybrand-500/10 focus-ring" href="#gallery">Gallery</a>
      <a class="block px-3 py-2 rounded-lg hover:bg-skybrand-500/10 focus-ring" href="#team">Team</a>
      <a class="block px-3 py-2 rounded-lg bg-gradient-to-r from-skybrand-300 to-skybrand-500 text-white focus-ring" href="#contact">Contact</a>
    </div>
  </nav>
</header>
