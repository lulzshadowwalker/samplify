{% extends "layouts/base.njk" %}

{% block meta %}
  <link rel="canonical" href="https://samplify.net/gallery"/>
  <meta name="keywords" content="medical sample logistics, technology, gallery, RFID, devices, software, workflows"/>
{% endblock %}

{% block jsonld %}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Samplify Technology Gallery",
  "description": "Showcase of Samplify's medical sample logistics technology, including devices, RFID systems, software interfaces, and workflows."
}
</script>
{% endblock %}

{% block content %}
<!-- Hero Section -->
<section class="relative isolate overflow-hidden bg-gradient-to-b from-skybrand-300 via-skybrand-500 to-deepblue-900 py-16 sm:py-20">
  <div class="absolute inset-0 -z-10 opacity-20">
    <svg xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none" viewBox="0 0 800 600" class="h-full w-full">
      <defs>
        <linearGradient id="g" x1="0" x2="1" y1="0" y2="1">
          <stop stop-color="#ffffff" stop-opacity="0.3" offset="0"/>
          <stop stop-color="#87CEEB" stop-opacity="0.2" offset="1"/>
        </linearGradient>
      </defs>
      <g fill="url(#g)">
        <circle cx="120" cy="140" r="60"/>
        <rect x="520" y="100" width="180" height="120" rx="12"/>
        <circle cx="650" cy="420" r="70"/>
        <rect x="80" y="350" width="140" height="100" rx="12"/>
      </g>
    </svg>
  </div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center text-white">
    <div class="reveal">
      <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold tracking-tight">Technology Gallery</h1>
      <p class="mt-6 text-lg sm:text-xl text-white/90 max-w-3xl mx-auto">
        Explore our innovative medical sample logistics solutions in action. 
        Discover the technology that's transforming healthcare logistics across the Middle East.
      </p>
    </div>
  </div>
</section>

<!-- Process Workflows -->
<section class="py-16 sm:py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12 reveal">
      <h2 class="text-2xl sm:text-3xl font-bold text-deepblue-900">Operational Workflows</h2>
      <p class="mt-3 text-slate-600">
        See how our integrated solution streamlines medical sample logistics from collection to delivery
      </p>
    </div>
    
    <div class="grid lg:grid-cols-3 gap-8">
      <!-- Receiving Workflow -->
      <article class="reveal group">
        <div class="relative overflow-hidden rounded-2xl bg-slate-100 mb-6">
          <div class="aspect-video">
            <video 
              class="w-full h-full object-cover cursor-pointer group-hover:scale-105 transition duration-500" 
              muted 
              loop 
              autoplay 
              playsInline
              data-lightbox="workflows"
              data-caption="Receiving Workflow — Automated inbound sample handling with RFID identification and system integration"
              tabindex="0"
              role="button"
              aria-label="Open video: Receiving workflow demonstration">
              <source src="/assets/videos/receiving.webm" type="video/webm">
              Your browser does not support the video tag.
            </video>
          </div>
          <div class="absolute inset-0 bg-black/0 group-hover:bg-black/10 transition duration-500 flex items-center justify-center">
            <div class="opacity-0 group-hover:opacity-100 transition duration-300 bg-white/90 rounded-full p-3">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="h-8 w-8 text-deepblue-900">
                <path d="M8 5v14l11-7L8 5z"/>
              </svg>
            </div>
          </div>
        </div>
        <h3 class="text-xl font-semibold text-deepblue-900 mb-3 text-center">Sending Process</h3>
        <p class="text-slate-600 leading-relaxed sr-only">
          Automated inbound sample handling with RFID identification, real-time inventory updates, 
          and seamless integration with laboratory information systems for immediate processing workflow initiation.
        </p>
      </article>
      
      <!-- Searching Workflow -->
      <article class="reveal group">
        <div class="relative overflow-hidden rounded-2xl bg-slate-100 mb-6">
          <div class="aspect-video">
            <video 
              class="w-full h-full object-cover cursor-pointer group-hover:scale-105 transition duration-500" 
              muted 
              loop 
              autoplay 
              playsInline
              data-lightbox="workflows"
              data-caption="Searching Workflow — Real-time sample location and tracking with comprehensive audit trails"
              tabindex="0"
              role="button"
              aria-label="Open video: Searching workflow demonstration">
              <source src="/assets/videos/searching.webm" type="video/webm">
              Your browser does not support the video tag.
            </video>
          </div>
          <div class="absolute inset-0 bg-black/0 group-hover:bg-black/10 transition duration-500 flex items-center justify-center">
            <div class="opacity-0 group-hover:opacity-100 transition duration-300 bg-white/90 rounded-full p-3">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="h-8 w-8 text-deepblue-900">
                <path d="M8 5v14l11-7L8 5z"/>
              </svg>
            </div>
          </div>
        </div>
        <h3 class="text-xl font-semibold text-deepblue-900 mb-3 text-center">Receiving Process</h3>
        <p class="text-slate-600 leading-relaxed sr-only">
          Real-time sample location and status tracking with powerful search capabilities, 
          temperature history, and comprehensive audit trails for complete traceability throughout the logistics chain.
        </p>
      </article>
      
      <!-- Sending Workflow -->
      <article class="reveal group">
        <div class="relative overflow-hidden rounded-2xl bg-slate-100 mb-6">
          <div class="aspect-video">
            <video 
              class="w-full h-full object-cover cursor-pointer group-hover:scale-105 transition duration-500" 
              muted 
              loop 
              autoplay 
              playsInline
              data-lightbox="workflows"
              data-caption="Sending Workflow — Automated outbound dispatch with GPS tracking and delivery confirmation"
              tabindex="0"
              role="button"
              aria-label="Open video: Sending workflow demonstration">
              <source src="/assets/videos/sending.webm" type="video/webm">
              Your browser does not support the video tag.
            </video>
          </div>
          <div class="absolute inset-0 bg-black/0 group-hover:bg-black/10 transition duration-500 flex items-center justify-center">
            <div class="opacity-0 group-hover:opacity-100 transition duration-300 bg-white/90 rounded-full p-3">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="h-8 w-8 text-deepblue-900">
                <path d="M8 5v14l11-7L8 5z"/>
              </svg>
            </div>
          </div>
        </div>
        <h3 class="text-xl font-semibold text-deepblue-900 mb-3 text-center">Sample Searching Process</h3>
        <p class="text-slate-600 leading-relaxed sr-only">
          Automated outbound dispatch workflow with smart routing, GPS tracking, temperature monitoring, 
          and automated delivery confirmation with complete chain of custody documentation.
        </p>
      </article>
    </div>
  </div>
</section>

<!-- CTA Section -->
