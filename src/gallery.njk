        category: 'workflows',
        type: 'video'
      },
      {
        src: 'assets/videos/searching.webm',
        caption: 'Searching Workflow — Real-time sample location and tracking with comprehensive audit trails',
        category: 'workflows',
        type: 'video'
      },
      {
        src: 'assets/videos/sending.webm',
        caption: 'Sending Workflow — Automated outbound dispatch with GPS tracking and delivery confirmation',
        category: 'workflows',
        type: 'video'
      }
    ];
    
    let visibleCount = 12;
    let currentFilter = 'all';
    
    function renderGallery() {
      if (!galleryGrid) return;
      
      galleryGrid.innerHTML = '';
      const filteredData = currentFilter === 'all' ? galleryData : galleryData.filter(item => item.category === currentFilter);
      const itemsToShow = filteredData.slice(0, visibleCount);
      
      itemsToShow.forEach((item, index) => {
        const figure = document.createElement('figure');
        figure.className = 'masonry-item relative overflow-hidden rounded-xl bg-slate-100 cursor-pointer hover:shadow-lg transition group';
        figure.tabIndex = 0;
        figure.setAttribute('role', 'button');
        figure.setAttribute('aria-label', `Open ${item.type}: ${item.caption}`);
        
        if (item.type === 'video') {
          const video = document.createElement('video');
          video.src = item.src;
          video.muted = true;
          video.loop = true;
          video.playsInline = true;
          video.autoplay = true;
          video.className = 'w-full h-auto block group-hover:scale-105 transition duration-500';
          
          // Add play icon overlay
          const overlay = document.createElement('div');
          overlay.className = 'absolute inset-0 bg-black/0 group-hover:bg-black/10 transition duration-500 flex items-center justify-center';
          const playIcon = document.createElement('div');
          playIcon.className = 'opacity-0 group-hover:opacity-100 transition duration-300 bg-white/90 rounded-full p-3';
          playIcon.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="h-8 w-8 text-deepblue-900"><path d="M8 5v14l11-7L8 5z"/></svg>';
          overlay.appendChild(playIcon);
          
          figure.appendChild(video);
          figure.appendChild(overlay);
        } else {
          const img = document.createElement('img');
          img.src = item.src;
          img.alt = item.caption;
          img.loading = 'lazy';
          img.className = 'w-full h-auto block group-hover:scale-105 transition duration-500';
          img.style.opacity = '0';
          figure.classList.add('skeleton');
          
          img.addEventListener('load', () => {
            img.style.opacity = '1';
            figure.classList.remove('skeleton');
          });
          
          figure.appendChild(img);
        }
        
        // Add to lightbox system
        addLightboxItem(figure, item.src, item.caption, item.type);
        galleryGrid.appendChild(figure);
      });
      
      // Show/hide load more button
      if (loadMoreBtn) {
        loadMoreBtn.classList.toggle('hidden', itemsToShow.length >= filteredData.length);
      }
    }
    
    // Filter functionality
    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        // Update active state
        filterButtons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');
        
        // Update filter and reset visible count
        currentFilter = button.getAttribute('data-filter');
        visibleCount = 12;
        renderGallery();
      });
    });
    
    // Load more functionality
    if (loadMoreBtn) {
      loadMoreBtn.addEventListener('click', () => {
        visibleCount += 12;
        renderGallery();
      });
    }
    
    // Initial render
    renderGallery();
  });
</script>
